<?xml version="1.0" encoding="utf-8"?>
<mosinstall type="module" version="1.0.0">
	<name>Меню</name>
	<author>Joostina! Project</author>
	<creationDate>05:10:2008</creationDate>
	<copyright>(C) 2008-2009 Joostina Team.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.htm GNU/GPL</license>
	<authorEmail>joostinacms@gmail.com</authorEmail>
	<authorUrl>www.joostina.ru</authorUrl>
	<version>0.1.0</version>
	<description>Модуль меню</description>
	<files>
		<filename module="mod_menu">mod_menu.php</filename>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Суффикс класса модуля" description="" />
		<param name="menutype" type="mos_menu" default="mainmenu" label="Используемое меню" description="" />
		<param name="type_menu" type="list" default="tree" label="Тип вывода меню" description="">
			<option value="tree">Дерево</option>
			<option value="jquery_tree">JQuery Дерево</option>
			<option value="vert_single">Вертикальное одноуровневое</option>
			<option value="vert1">Вертикальное (выпадающее)</option>
			<option value="vert_img">Вертикальное (выпадающее с картинками)</option>
			<option value="accordion">Аккордеон</option>
			<option value="hor_single">Горизонтальное (одноуровневое, список)</option>
			<option value="hor_simple_tabs">Горизонтальное (одноуровневое, табы)</option>
			<option value="hor_dropdown">Горизонтальное (выпадающее)</option>
			<option value="hor_tabs">Горизонтальное (табы + выпадающее)</option>
			<option value="hor_dropline">Горизонтальное (подпункты в одну линию)</option>
		</param>
		<param name="template" type="text" default="default.php" label="Шаблон модуля (название.расширение)" description="Введите название файла (например: template.php)." />
		<param name="template_dir" type="radio" default="0" label="Директория шаблона" description="Системная - шаблон находится в modules/название_модуля/view. Папка шаблона сайта - шаблон находится в templates/текущий_шаблон_сайта/html/название_модуля ">
			<option value="0">Системная</option>
			<option value="1">Папка шаблона сайта</option>
		</param>
		<param name="first_item" type="radio" default="1" label="Скрывать первый пункт меню" description="">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
		<param name="css" type="radio" default="1" label="Подключать CSS модуля" description="Подключать CSS модуля или использовать стиили шаблона">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</param>
	</params>
</mosinstall>